<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlipOnceActivity">

    <com.hypersoft.easyviewflip.EasyViewFlip
        android:id="@+id/cardFlipView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flipDuration="500"
        app:flipEnabled="true"
        app:flipFrom="front"
        app:flipOnTouch="false"
        app:flipOnceEnabled="true"
        app:flipType="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/king_back_side"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center"
            android:src="@drawable/back_side_king"
            android:contentDescription="TODO"
            />

        <ImageView
            android:id="@+id/king_front_side"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="center"
            android:src="@drawable/front_side_design"
            android:contentDescription="TODO"
            />
    </com.hypersoft.easyviewflip.EasyViewFlip>

</androidx.constraintlayout.widget.ConstraintLayout>